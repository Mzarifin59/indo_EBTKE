---
import { Button } from "@/components/ui/button";
import HeaderMobile from "@/components/header-mobile";
---

<header class="relative z-10 bg-[#28306E] text-white">
  <div class="container mx-auto px-5">
    <div class="flex items-center justify-between h-16">
      {/* Desktop Navigation - Hidden on mobile */}
      <nav class="hidden lg:flex space-x-8">
        <a href="#" class="hover:text-blue-200 transition-colors text-sm">
          Home
        </a>
        <a href="#" class="hover:text-blue-200 transition-colors text-sm">
          Foreword
        </a>
        <a href="#" class="hover:text-blue-200 transition-colors text-sm">
          About
        </a>
        <a href="#" class="hover:text-blue-200 transition-colors text-sm">
          Program
        </a>
        <a href="#" class="hover:text-blue-200 transition-colors text-sm">
          Sponsor & Exhibition
        </a>
        <a href="#" class="hover:text-blue-200 transition-colors text-sm">
          Venue
        </a>
        <a href="#" class="hover:text-blue-200 transition-colors text-sm">
          Contact Us
        </a>
        <a href="#" class="hover:text-blue-200 transition-colors text-sm">
          FAQ
        </a>
      </nav>

      {/* Mobile Navigation - Dropdown Menu */}
      <div class="lg:hidden">
        <HeaderMobile client:load/>
      </div>

      {/* Registration Button - Always visible */}
      <a href={"/"}>
        <Button
          size="sm"
          className="font-manrope bg-[#8BC541] hover:bg-green-600 text-white"
        >
          Registration
        </Button>
      </a>
    </div>
  </div>
</header>
